{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="col-lg-6 m-auto bg-body-secondary  mt-5 p-4  ">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

            <div class="mb-3">
                <label class="mb-1" for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                       autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label class="mb-1" for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control"
                       autocomplete="current-password"
                       required>

            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-lg btn-primary btn" type="submit">
                Log in
            </button>

            <div class="m-3 ">
                <h4>Or log in with microsoft</h4>
                <a href="{{ path('app_microsoft_login') }}">
                    <img src="{{ asset('images/icon/microsoft.png') }}" alt="Microsoft" width="50" height="50">
                </a>
            </div>


        </form>
    </div>
{% endblock %}
